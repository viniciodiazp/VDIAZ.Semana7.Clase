<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VDIAZ.Semana7.Clase.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login"
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtUser" Placeholder="Ingresa usuario" Keyboard="Default"></Entry>
            <Entry x:Name="txtPassword" Placeholder="Ingresa contraseña" Keyboard="Default"></Entry>
            <Button x:Name="btnLogin" Text="Iniciar sesión" Clicked="btnLogin_Clicked"></Button>
            <Button x:Name="btnRegister" Text="Registrar" Clicked="btnRegister_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>