<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VDIAZ.Semana7.Clase.Views.ItemPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Edit"
                HorizontalOptions="CenterAndExpand" />
                <Label Text="Nombre:"></Label>
                <Entry x:Name="txtName" Placeholder="Introduce tu nombre"></Entry>

                <Label Text="Usuario:"></Label>
                <Entry x:Name="txtUser" Placeholder="Introduce tu usuario"></Entry>

                <Label Text="Contraseña:"></Label>
                <Entry x:Name="txtPassword" Placeholder="Introduce tu contraseña"></Entry>

                <Button x:Name="btnUpdate" Text="Guardar" BackgroundColor="Azure" Clicked="btnUpdate_Clicked"></Button>
                <Button x:Name="btnDelete" Text="Eliminar" Clicked="btnDelete_Clicked"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>